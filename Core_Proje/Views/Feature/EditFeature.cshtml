@model EntityLayer.Concrete.Feature
@{
    ViewData["Title"] = "EditFeature";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="card shadow">
    <div class="card-header border-0">
        <h3 class="mb-0">Öne Çıkanlar (Feature) Düzenleme Sayfası</h3>
    </div>
    <div class="card-body">
        
        <form method="post">
            
            @Html.HiddenFor(x => x.FeatureID)

            <div class="form-group">
                <label class="form-control-label">Başlık (Header)</label>
                <input type="text" class="form-control" asp-for="Header">
            </div>

            <div class="form-group">
                <label class="form-control-label">Ad Soyad (Name)</label>
                <input type="text" class="form-control" asp-for="Name">
            </div>

            <div class="form-group">
                <label class="form-control-label">Ünvan / Meslek (Title)</label>
                <input type="text" class="form-control" asp-for="Title">
            </div>

            <button type="submit" class="btn btn-success">Güncelle</button>
            <a href="/Feature/Index" class="btn btn-secondary">İptal</a>

        </form>
    </div>
</div>

