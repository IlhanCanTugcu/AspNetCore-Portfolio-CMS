@model EntityLayer.Concrete.Service

@{
    ViewData["Title"] = "Hizmet Güncelle";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="card shadow">
    <div class="card-header border-0">
        <h3 class="mb-0">Hizmet Güncelleme Sayfası</h3>
    </div>
    <div class="card-body">

        <form method="post" enctype="multipart/form-data">

            @Html.HiddenFor(x => x.ServiceID)

            @Html.HiddenFor(x => x.ImageUrl)

            <div class="form-group">
                <label class="form-control-label">Hizmet Başlığı</label>
                <input type="text" class="form-control" asp-for="Title">
            </div>

            <div class="form-group">
                <label class="form-control-label">Resim / İkon (Değiştirmek İsterseniz Seçin)</label>
                <input type="text" class="form-control" asp-for="ImageUrl">
            </div>

            <br />
            <button type="submit" class="btn btn-success">Güncelle</button>
            <a href="/Default/Index" class="btn btn-secondary">İptal</a>

        </form>
    </div>
</div>