@using EntityLayer.Concrete
@using Microsoft.EntityFrameworkCore.Metadata.Internal
@model List<Service>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="card-header border-0">
	<h3 class="mb-0">Hizmetler Tablosu Listesi</h3>
</div>
<div class="table-responsive">
	<table class="table align-items-center table-flush">
		<thead class="thead-light">
			<tr>
				<th scope="col" class="sort" data-sort="name">#</th>
				<th scope="col" class="sort" data-sort="budget">Başlık</th>
				<th scope="col" class="sort" data-sort="status">Image URL</th>
				<th scope="col">Sil</th>
				<th scope="col">Güncelle</th>
				<th scope="col"></th>
			</tr>
		</thead>
		<tbody class="list">

			@foreach (var item in Model)
			{
				<tr>
					<th class="name">
						@item.ServiceID
					</th>
					<td class="budget">
						@item.Title
					</td>
					<td class="status">
						@item.ImageUrl
					</td>
					<td><a href="/Service/DeleteService/@item.ServiceID" class="btn btn-danger" onclick="return confirm('Silmek istediğinize emin misiniz?')">Sil</a></td>
					<td><a href="/Service/EditService/@item.ServiceID" class="btn btn-success">Güncelle</a></td>
				</tr>
			}
		</tbody>
	</table>
	<a href="/Service/AddService" class="btn btn-primary">Yeni Hizmet Ekle</a>
</div>


