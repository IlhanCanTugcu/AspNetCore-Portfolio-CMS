@using EntityLayer.Concrete
@using Microsoft.EntityFrameworkCore.Metadata.Internal
@model List<Service>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Yetenek Tablosu Listesi</h4>
			<div class="table-responsive">
				<table class="table">
					<thead>
						<tr>
							<th>#</th>
							<th>Başlık</th>
							<th>Image URL</th>
							<th>Sil</th>
							<th>Düzenle</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td>@item.ServiceID</td>
								<td>@item.Title</td>
								<td>@item.ImageUrl</td>
								<td><a href="/Service/DeleteService/@item.ServiceID" class="btn btn-outline-danger" onclick="return confirm('Silmek istediğinize emin misiniz?')">Sil</a></td>
								<td>
									<a href="/Service/EditService/@item.ServiceID" class="btn btn-outline-success">Güncelle</a>
								</td>
							</tr>
						}
					</tbody>
				</table>
				<a href="/Service/AddService" class="btn btn-outline-info">Yeni Hizmet Ekle</a>
			</div>
		</div>
	</div>
</div>
