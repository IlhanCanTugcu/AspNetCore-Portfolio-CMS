@model EntityLayer.Concrete.Skill
@{
	ViewData["Title"] = "EditSkill";
	Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="card">
	<div class="card-header border-0">
		<h3 class="mb-0">Yetenek Güncelleme Sayfası</h3>
	</div>
	<div class="card-body">
		<form method="post">
			@Html.HiddenFor(x => x.SkillID)

			<div class="from-group">
				<label>Yetenek Başlığı</label>
				<input type="text" asp-for="Title" class="form-control" />
			</div>

			<div class="from-group">
				<label>Yeni Değer</label>
				<input type="text" asp-for="Value" class="form-control" />
			</div>
			<br />
			<button type="submit" class="btn btn-success">Güncelle</button>
			<a href="/Skill/Index" class="btn btn-secondary">İptal</a>

		</form>
	</div>
</div>