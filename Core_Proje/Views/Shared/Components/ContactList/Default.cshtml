@using EntityLayer.Concrete
@model List<Contact>

<div class="section px-2 px-lg-4 pb-4 pt-5 mb-5" id="contact">
	<div class="container-narrow">
		<div class="text-center mb-5">
			<h2 class="marker marker-center">Benimle İletişime Geçin</h2>
		</div>
		<div class="row">

			<div class="col-md-6" data-aos="zoom-in" data-aos-delay="100">
				<div class="bg-light my-2 p-3 pt-2">
					<form action="/Default/SendMessage" method="POST">
						<div class="form-group my-2">
							<label for="name" class="form-label fw-bolder">Adınız</label>
							<input class="form-control" type="text" id="name" name="Name" required>
						</div>
						<div class="form-group my-2">
							<label for="email" class="form-label fw-bolder">Email Adresiniz</label>
							<input class="form-control" type="email" id="Mail Adresiniz" name="Mail" required>
						</div>
						<div class="form-group my-2">
							<label for="message" class="form-label fw-bolder">Mesajınız</label>
							<textarea class="form-control" style="resize: none;" id="message" name="Content" rows="4" required></textarea>
						</div>
						<button class="btn btn-primary mt-2" type="submit">Gönder</button>
					</form>
				</div>
			</div>
			<div class="col-md-6" data-aos="fade-left" data-aos-delay="300">
				@foreach (var item in Model)
				{
					<div class="mt-3 px-1">
						<div class="h5">@item.Title</div>
						<p>@item.Description</p>
					</div>
					<div class="mt-53 px-1">
						<div class="row">
							<div class="col-sm-2">
								<div class="pb-1">Email:</div>
							</div>
							<div class="col-sm-10">
								<div class="pb-1 fw-bolder">@item.Mail</div>
							</div>
							<div class="col-sm-2">
								<div class="pb-1">Telefon:</div>
							</div>
							<div class="col-sm-10">
								<div class="pb-1 fw-bolder">@item.Phone</div>
							</div>
						</div>
					</div>
				}
			</div>
		</div>
	</div>
</div>