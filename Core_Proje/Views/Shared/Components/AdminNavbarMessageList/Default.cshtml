@using EntityLayer.Concrete
@model List<Message>

<li class="nav-item dropdown border-left">
    <a class="nav-link count-indicator dropdown-toggle" id="messageDropdown" href="#" data-toggle="dropdown" aria-expanded="false">
        <i class="mdi mdi-email"></i>
        @if (Model.Count > 0)
        {
            <span class="count bg-success"></span>
        }
    </a>

    <div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="messageDropdown">
        <h5 class="p-3 mb-0 text-center">Okunmamış Mesajlar</h5>

        @foreach (var item in Model)
        {
            <div class="dropdown-divider"></div>
            <a class="dropdown-item preview-item" href="/Message/Index">
                <div class="preview-item-content">
                    <p class="preview-subject ellipsis mb-1">@item.Name bir mesaj gönderdi</p>
                    <p class="text-muted mb-0"> @(((DateTime)item.Date).ToString("dd.MM.yyyy")) </p>
                </div>
            </a>
        }

        <div class="dropdown-divider"></div>
        <p class="p-3 mb-0 text-center"><a href="/Message/Index" class="text-muted">Tüm mesajları gör</a></p>
    </div>
</li>