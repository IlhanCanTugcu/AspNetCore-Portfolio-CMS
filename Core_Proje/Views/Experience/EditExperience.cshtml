@model EntityLayer.Concrete.Experience
@{
	ViewData["Title"] = "EditExperience";
	Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="card shadow">
	<div class="card-header border-0">
		<h3 class="mb-0">Deneyim Güncelleme Sayfası</h3>
	</div>
	<div class="card-body">

		<form method="post">
			@Html.HiddenFor(x => x.ExperienceID)
			<div class="form-group">
				<label class="form-control-label">Şirket Adı</label>
				<input type="text" class="form-control" asp-for="Name">
			</div>

			<div class="form-group">
				<label class="form-control-label">Tarih Aralığı</label>
				<input type="text" class="form-control" asp-for="Date" placeholder="Örn: Ocak 2023 - Haziran 2024">
			</div>

			<div class="form-group">
				<label class="form-control-label">Resim Yolu (ImageUrl)</label>
				<input type="text" class="form-control" asp-for="ImageUrl" placeholder="/Template/images/experience/...">
			</div>

			<div class="form-group">
				<label class="form-control-label">Açıklama (Pozisyon)</label>
				<textarea class="form-control" asp-for="Description" rows="5"></textarea>
			</div>

			<button type="submit" class="btn btn-primary">Güncelle</button>
			<a href="/Experience/Index" class="btn btn-secondary">İptal</a>

		</form>
	</div>
</div>


